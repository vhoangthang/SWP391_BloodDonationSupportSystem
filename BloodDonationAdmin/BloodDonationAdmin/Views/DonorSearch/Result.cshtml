@model List<BloodDonationAdmin.Models.Donor>

<h2>Người hiến phù hợp gần bạn</h2>

@if (!Model.Any())
{
    <p>Không tìm thấy người hiến phù hợp.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Tên</th>
                <th>Nhóm máu</th>
                <th>Ngày sinh</th>
                <th>SĐT</th>
                <th>Địa chỉ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donor in Model)
            {
                <tr>
                    <td>@donor.Name</td>
                    <td>@donor.BloodTypeID</td>
                    <td>@donor.DateOfBirth.ToString("dd/MM/yyyy")</td>
                    <td>@donor.ContactNumber</td>
                    <td>@donor.Address</td>
                </tr>
            }
        </tbody>
    </table>
}

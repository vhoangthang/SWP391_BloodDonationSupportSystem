@model IEnumerable<BloodDonationAdmin.Models.Account>

@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-2xl font-bold text-red-600 mb-6">Quản lý người dùng</h2>

<div class="overflow-x-auto shadow-lg rounded-xl bg-white">
    <table class="min-w-full table-auto border border-gray-300 text-sm">
        <thead class="bg-red-100 text-red-800">
            <tr>
                <th class="px-4 py-2 text-left">ID</th>
                <th class="px-4 py-2 text-left">Mã CSYT</th>
                <th class="px-4 py-2 text-left">Tên đăng nhập</th>
                <th class="px-4 py-2 text-left">Mật khẩu</th>
                <th class="px-4 py-2 text-left">Email</th>
                <th class="px-4 py-2 text-left">Vai trò</th>
                <th class="px-4 py-2 text-left">Quyền</th>
            </tr>
        </thead>
        <tbody class="text-gray-700">
            @foreach (var user in Model)
            {
                <tr class="border-t hover:bg-gray-50">
                    <td class="px-4 py-2">@user.AccountID</td>
                    <td class="px-4 py-2">@user.MedicalCenterID</td>
                    <td class="px-4 py-2 font-medium">@user.Username</td>
                    <td class="px-4 py-2 text-gray-500">@user.Password</td>
                    <td class="px-4 py-2">@user.Email</td>
                    <td class="px-4 py-2">@user.Role</td>
                    <td class="px-4 py-2">
                        @if (user.PermissionLevel == 1)
                        {
                            <span class="text-green-600 font-semibold">Admin</span>
                        }
                        else if (user.PermissionLevel == 0)
                        {
                            <span class="text-gray-600">Người dùng</span>
                        }
                        else
                        {
                            <span class="text-gray-400 italic">Chưa phân quyền</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

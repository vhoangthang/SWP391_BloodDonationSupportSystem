@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>Thông báo hiến máu</title>
    <link rel="stylesheet" href="?css/DonorReceiveNotification.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <header class="navbar">
        <div class="logo">LifeBlood</div>
        <nav class="nav-links">
            <a href="#">Hiến Máu</a>
            <a href="#">Tổ Chức Hiến Máu</a>
            <a href="#">Liên Hệ</a>
            <button class="notify-btn">
                <i class="fas fa-bell"></i>
            </button>
            <button class="login-btn">Đăng nhập</button>
        </nav>
    </header>

    <!-- Tab thông báo hiển thị sẵn -->
    <div class="notification-tab">
        <h2>Thông báo</h2>
        <div class="notification">
            <p><strong>[Khẩn cấp]</strong> Bệnh viện A cần nhóm máu O tại TP.HCM.</p>
            <button class="confirm-btn">Xác nhận hiến máu</button>
        </div>
        <div class="notification">
            <p>Bạn đã đăng ký hiến máu vào ngày 20/6 lúc 13:00.</p>
        </div>
        <div class="notification">
            <p>Phiếu hiến máu của bạn đã được xác nhận.</p>
        </div>
    </div>
</body>
</html>
